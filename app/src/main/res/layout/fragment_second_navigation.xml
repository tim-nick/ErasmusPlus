<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/background_light">


<!--https://medium.com/@ali.muzaffar/understanding-vectordrawable-pathdata-commands-in-android-d56a6054610e-->
    <Button
        android:id="@+id/addButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/addbutton"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/background_light"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:id="@+id/sightsGird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/background_light"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:rowCount="3">


            <!--Spalte 1-->
            <!--Karte 1-->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="7dp"
                app:cardBackgroundColor="@android:color/darker_gray"
                app:cardElevation="8dp"
                android:layout_marginEnd="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="174dp"
                        android:layout_height="174dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/zwillingshaus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="@string/title_Sights_cardOne"
                        android:textAlignment="viewStart"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/category_Sights_One"
                        android:textColor="@android:color/white" />

                </LinearLayout>

                <Button
                    android:id="@+id/sightButtonFirstCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.0"/>


            </androidx.cardview.widget.CardView>

            <!--Spalte 1-->
            <!--Karte 2-->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="7dp"
                app:cardBackgroundColor="@android:color/holo_green_dark"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="174dp"
                        android:layout_height="174dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/zwillingshaus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="@string/title_Sights_cardTwo"
                        android:textAlignment="viewStart"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/category_Sights_Two"
                        android:textColor="@android:color/white" />

                </LinearLayout>

                <Button
                    android:id="@+id/sightbuttonSecondCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.0"/>


            </androidx.cardview.widget.CardView>


            <!--Spalte 1-->
            <!--Karte 3-->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="7dp"
                app:cardBackgroundColor="@android:color/holo_green_dark"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="174dp"
                    android:layout_height="230dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="174dp"
                        android:layout_height="174dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/zwillingshaus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="@string/title_Sights_cardFour"
                        android:textAlignment="viewStart"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/category_Sights_Two"
                        android:textColor="@android:color/white" />

                </LinearLayout>

                <Button
                    android:id="@+id/sightbuttonThirdCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.0"/>
            </androidx.cardview.widget.CardView>


            <!--Spalte 2-->
            <!--Karte 1-->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:layout_marginBottom="7dp"
                app:cardBackgroundColor="@android:color/darker_gray"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="174dp"
                        android:layout_height="174dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/zwillingshaus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="@string/title_Sights_cardThree"
                        android:textAlignment="viewStart"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/category_Sights_One"
                        android:textColor="@android:color/white" />

                </LinearLayout>

                <Button
                    android:id="@+id/sightbuttonFourthCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.0"/>


            </androidx.cardview.widget.CardView>


            <!--Spalte 2-->
            <!--Karte 2-->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:layout_marginBottom="7dp"
                app:cardBackgroundColor="@android:color/darker_gray"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="174dp"
                        android:layout_height="174dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/zwillingshaus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="@string/title_Sights_cardThree"
                        android:textAlignment="viewStart"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/category_Sights_One"
                        android:textColor="@android:color/white" />

                </LinearLayout>

                <Button
                    android:id="@+id/sightbuttonFifthCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.0"/>

            </androidx.cardview.widget.CardView>


            <!--Spalte 2-->
            <!--Karte 3-->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:layout_marginBottom="7dp"
                app:cardBackgroundColor="@android:color/darker_gray"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="174dp"
                        android:layout_height="174dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/zwillingshaus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="@string/title_Sights_cardThree"
                        android:textAlignment="viewStart"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/category_Sights_One"
                        android:textColor="@android:color/white" />

                </LinearLayout>

                <Button
                    android:id="@+id/sightbuttonSixthCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.0"/>

            </androidx.cardview.widget.CardView>


        </GridLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>